<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/fondo"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.1" >

        <LinearLayout
            android:id="@+id/LinearLayoutData"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="#00000000"
            android:orientation="vertical" >

            <Button
                android:id="@+id/button1"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="BtnConexionWs"
                android:text="Conexi贸n WS"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button5"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnConfiguracionApp"
                android:text="Configuraci贸n Aplicaci贸n"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnVariable"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnVariableApp"
                android:text="Variables Aplicacion"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnsincronizar"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSincronizar"
                android:text="Sincronizaci贸n"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnLog"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="Log"
                android:text="Ver Log"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

            <Button
                android:id="@+id/button6"
                style="@style/btn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnSalirApp"
                android:text="Salir App"
                android:textColor="@android:color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/LinearLayoutConfig"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.9"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/LinearLayoutMenuConfig"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical" >

            <Button
                android:id="@+id/buttonRegresar"
                style="@style/btn3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:onClick="Regresar"
                android:text="Regresar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>